#!/bin/bash
echo $(( $(echo "$WATER" | tr 'water' '01234' | awk $'{\n s=0\n i=1\n while (i<=length) {\n   s=s*5+substr($0,i,1)\n   i++\n }\n}\nEND {\n print s\n}') + $(echo "$STIR" | tr 'stir' '0123' | awk $'{\n s=0\n i=1\n while (i<=length) {\n   s=s*4+substr($0,i,1)\n   i++\n }\n}\nEND {\n print s\n}') )) | awk $'BEGIN { s="bestchol"\n base=length(s) }\n{ r=""; while ($1>0) {\n   r=substr(s,($1 % base)+1,1) r\n   $1 = int($1 / base)\n } print r }'